<% context = @operation.context || {} %>
<section class="space-y-4">
  <h2 class="text-2xl font-semibold text-slate-900"><%= @operation.title %></h2>
  <p class="text-sm text-slate-600">Coordina la sesión de inducción y cierra el onboarding.</p>

  <div class="rounded border border-slate-200 bg-white p-4 shadow-sm">
    <p class="text-sm text-slate-700">Fecha sugerida: <%= context["orientation_date"] %></p>
    <p class="mt-2 text-xs text-slate-500">Instrucciones: <%= context["instructions"] %></p>
  </div>

  <div class="flex space-x-3">
    <%= button_to "Sesión agendada", complete_operation_path(@operation), method: :post, class: "rounded bg-green-600 px-4 py-2 text-sm font-semibold text-white" %>
    <%= button_to "Omitir", skip_operation_path(@operation), method: :post, class: "rounded bg-amber-500 px-4 py-2 text-sm font-semibold text-white" %>
    <%= button_to "Cancelar", cancel_operation_path(@operation), method: :post, class: "rounded bg-red-600 px-4 py-2 text-sm font-semibold text-white" %>
  </div>
</section>
