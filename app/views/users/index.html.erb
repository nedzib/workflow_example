<section class="space-y-6">
  <div class="flex items-center justify-between">
    <h2 class="text-2xl font-semibold text-slate-900">Usuarios</h2>
    <% if user_signed_in? %>
      <%= link_to "Nuevo usuario", new_user_registration_path, class: "rounded bg-blue-600 px-4 py-2 text-sm font-semibold text-white" %>
    <% end %>
  </div>

  <% if @current_operation %>
    <div class="rounded border border-amber-200 bg-amber-50 p-4">
      <p class="font-medium text-amber-900">Tarea pendiente:</p>
      <p class="text-sm text-amber-800">
        <%= link_to @current_operation.title, operation_path(@current_operation), class: "underline" %>
      </p>
    </div>
  <% end %>

  <table class="min-w-full divide-y divide-slate-200 bg-white shadow-sm">
    <thead class="bg-slate-50">
      <tr>
        <th class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">Email</th>
        <th class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">Creado</th>
        <th class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">Workflow</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-slate-100">
      <% @users.each do |user| %>
        <tr>
          <td class="px-4 py-3 text-sm text-slate-800"><%= link_to user.email, user_path(user), class: "underline" %></td>
          <td class="px-4 py-3 text-sm text-slate-600"><%= l user.created_at, format: :short %></td>
          <td class="px-4 py-3 text-sm text-slate-600">
            <% process = @process_map[user.id] %>
            <% if process %>
              <span class="inline-flex items-center rounded-full bg-slate-100 px-2 py-1 text-xs font-medium text-slate-700">
                <%= process.state.humanize %>
              </span>
            <% else %>
              <span class="text-xs text-slate-400">Sin proceso</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
