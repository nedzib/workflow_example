<section class="space-y-6">
  <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
    <div>
      <h2 class="text-2xl font-semibold text-slate-900">Tablero de workflows</h2>
      <p class="text-sm text-slate-600">Visualiza el estado de cada proceso activo en formato tipo Trello.</p>
    </div>
    <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-700">
      <%= pluralize(@processes_by_state.values.sum(&:count), "workflow") %>
    </span>
  </div>

  <div class="overflow-x-auto pb-4">
    <div class="flex min-w-full gap-6">
      <% @columns.each do |column| %>
        <% processes = @processes_by_state[column[:key]] || [] %>
        <div class="flex-1 min-w-[18rem] rounded-lg bg-slate-100 p-4 shadow-inner">
          <header class="mb-4 flex items-center justify-between">
            <div>
              <h3 class="text-lg font-semibold text-slate-800"><%= column[:title] %></h3>
              <p class="text-xs text-slate-500"><%= column[:description] %></p>
            </div>
            <span class="rounded-full bg-white px-2 py-1 text-xs font-semibold text-slate-600">
              <%= processes.count %>
            </span>
          </header>

          <div class="space-y-3">
            <% if processes.empty? %>
              <p class="rounded border border-dashed border-slate-300 bg-slate-50 p-3 text-center text-xs text-slate-400">
                No hay workflows en este estado.
              </p>
            <% else %>
              <% processes.each do |process| %>
                <% user = @users_by_id[process.context["user_id"]] %>
                <% operations_by_state = process.operations.group_by(&:state) %>
                <article class="rounded-lg border border-slate-200 bg-white p-4 shadow-sm">
                  <div class="flex items-start justify-between gap-2">
                    <div>
                      <h4 class="text-sm font-semibold text-slate-900">
                        <%= process.template.title %>
                      </h4>
                      <% if user %>
                        <p class="text-xs text-slate-600">Usuario: <%= link_to user.email, user_path(user), class: "underline" %></p>
                      <% end %>
                    </div>
                    <span class="rounded-full px-2 py-1 text-[10px] font-semibold <%= column[:badge_class] %>">
                      <%= column[:title] %>
                    </span>
                  </div>

                  <dl class="mt-3 space-y-1 text-xs text-slate-600">
                    <dt class="font-semibold text-slate-700">Resumen de tareas</dt>
                    <% @operation_state_order.each do |operation_state| %>
                      <% operations = operations_by_state[operation_state] || [] %>
                      <% next if operations.empty? %>
                      <dd class="flex items-center justify-between rounded bg-slate-50 px-2 py-1">
                        <span><%= @operation_state_labels[operation_state] %></span>
                        <span class="font-semibold"><%= operations.count %></span>
                      </dd>
                    <% end %>
                  </dl>

                  <% if process.operations.present? %>
                    <div class="mt-3 space-y-2">
                      <% process.operations.each do |operation| %>
                        <div class="rounded border border-slate-200 bg-slate-50 px-2 py-1 text-xs">
                          <p class="font-medium text-slate-700"><%= operation.title.presence || operation.operation_template.title %></p>
                          <p class="text-[11px] text-slate-500">Estado: <%= @operation_state_labels[operation.state] %></p>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </article>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
